@model AnadoluRental.Models.Models.Kiralik
@{
    ViewBag.Title = "Yeni Oluştur";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
