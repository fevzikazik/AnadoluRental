            @Html.EditorFor(model => model.kiralayanKulID, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.kiralayanKulID, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Oluştur" class="btn btn-default" />
        </div>
    </div>
</div>
}
<div>
    @Html.ActionLink("Kiralama Listesine Geri Dön", "Index")
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}